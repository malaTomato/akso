<view>
  <p class="title">{{record.name}}</p>
  <template name="radio">
    <view class="question">
      <p >{{item.title}}(单选)</p>
      <radio-group class="radio-group" bindchange="onChange" data-id="{{item.id}}">
        <label class="radio option" wx:for="{{item.options}}" wx:key="key" >
          <radio value="{{item.key}}" />{{item.key}}.{{item.value}}
        </label>
      </radio-group>
    </view>
  </template>

  <template name="checkbox">
    <view class="question">

      <p>{{item.title}}(多选)</p>

      <checkbox-group class="radio-group" bindchange="onChange" data-id="{{item.id}}">
        <label class="radio option" wx:for="{{item.options}}" wx:key="key" style="display:flex;">
          <checkbox value="{{item.key}}" />{{item.key}}.{{item.value}}
        </label>
      </checkbox-group>
    </view>

  </template>




</view>

<view class="detail">
  <van-cell-group title="请按实际情况填写">
    <block wx:for="{{record.questions}}" wx:key="key">
      <template is="{{item.type}}" data="{{item}}">
      </template>
    </block>
  </van-cell-group>


  <van-row>
    <van-col offset="12" span="12">
      <van-button color="linear-gradient(to right, #4bb0ff, #6149f6)" bindtap="submit">确认无误后提交</van-button>
    </van-col>
  </van-row>

</view>